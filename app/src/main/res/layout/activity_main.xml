<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <ImageView
        android:id="@+id/headphonesImage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/headphone"
        android:layout_marginBottom="10dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="enjoy your"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/titleText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:gravity="center"
        android:text="music, enjoy"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/titleText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your life"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:layout_marginBottom="19dp"
        android:layout_marginRight="38dp"/>

    <TextView
        android:id="@+id/subText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="listen to your favorite music for\nfree. anywhere."
        android:textColor="#D9D9D9"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/getStartBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Start"
        android:backgroundTint="#FFFFFF"
        android:textColor="#ffffff"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/rounded_button"/>

</LinearLayout>
