<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_activity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/home_upperbg">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Discover"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />

    <!-- Top Profile/Discover Section -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingBottom="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Profiles (Dummy Images for Now) -->
            <ImageView android:layout_width="64dp" android:layout_height="64dp"
                android:src="@drawable/shihan" android:layout_marginEnd="8dp"/>
            <ImageView android:layout_width="64dp" android:layout_height="64dp"
                android:src="@drawable/amal" android:layout_marginEnd="8dp"/>
            <ImageView android:layout_width="64dp" android:layout_height="64dp"
                android:src="@drawable/damith" android:layout_marginEnd="8dp"/>
            <ImageView android:layout_width="64dp" android:layout_height="64dp"
                android:src="@drawable/suneera" android:layout_marginEnd="8dp"/>
            <ImageView android:layout_width="64dp" android:layout_height="64dp"
                android:src="@drawable/manej" android:layout_marginEnd="8dp"/>


            <!-- Repeat for Other Users... -->
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Search music"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button"
        android:drawableLeft="@drawable/ic_search"
        android:padding="8dp"/>

    <!-- "Made For You" Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Made for you"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Albums (Dummy Images for Now) -->
            <ImageView android:layout_width="100dp" android:layout_height="100dp"
                android:src="@drawable/ic_album" android:layout_marginEnd="8dp"/>
            <ImageView android:layout_width="100dp" android:layout_height="100dp"
                android:src="@drawable/ic_album" android:layout_marginEnd="8dp"/>
            <!-- Repeat as needed -->
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Ad Placeholder -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:src="@drawable/ic_ad"
        android:scaleType="center"/>

    <!-- "Today Hits" Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today hits"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="8dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Hit Songs (Dummy Images for Now) -->
            <ImageView android:layout_width="100dp" android:layout_height="100dp"
                android:src="@drawable/ic_album" android:layout_marginEnd="8dp"/>
            <ImageView android:layout_width="100dp" android:layout_height="100dp"
                android:src="@drawable/ic_album" android:layout_marginEnd="8dp"/>
            <ImageView android:layout_width="100dp" android:layout_height="100dp"
                android:src="@drawable/ic_album" android:layout_marginEnd="8dp"/>
            <!-- Repeat as needed -->
        </LinearLayout>
    </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:paddingTop="8dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Hit Songs (Dummy Images for Now) -->
                <ImageView android:layout_width="100dp" android:layout_height="100dp"
                    android:src="@drawable/ic_album" android:layout_marginEnd="8dp"/>
                <ImageView android:layout_width="100dp" android:layout_height="100dp"
                    android:src="@drawable/ic_album" android:layout_marginEnd="8dp"/>
                <ImageView android:layout_width="100dp" android:layout_height="100dp"
                    android:src="@drawable/ic_album" android:layout_marginEnd="8dp"/>
                <!-- Repeat as needed -->
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>